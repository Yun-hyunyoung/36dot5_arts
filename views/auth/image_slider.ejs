<section class="content block-list">
    <header>
        <h3>최근 그림</h3>
        <a href="#" class="all_link">더 보기</a>
    </header>
    <ul>
        <%artworks.forEach(function(artwork, idx){%>
          <% if (idx < 4){%>

        <li class = "img_li">
          <div class="img_box">
          <div class="_img">

          <a href="artwork/<%=artwork._id%>">
                <img src="images/artworks/<%=artwork.image%>" alt="Thumb<%=idx+1%>">
            </a>
            </div>
            </div>
            <div class="excerpt">
                <a>
                    <h3><%=artwork.title%></h3>
                </a>
                <p>
                    <p>재료 : <%=artwork.material%>/<%=artwork.medium%></p>
                    <p>크기 : <%=artwork.width%>X<%=artwork.height%>X<%=artwork.depth%>(cm)</p>
                    <p>가격 : <%=artwork.price%>원</p>
                </p>
            </div>
        </li>
        <%}%>
        <%})%>
    </ul>
</section>

<style media="screen">

._img>img{
  max-height: 150px;

}
  .img_box{
    height: 280px;
    min-width:200px;
width: auto;
      text-align: center;
    display:table-cell;
    vertical-align: middle;
  background-color: rgba(9, 9, 9, 0.5);


  }
</style>
